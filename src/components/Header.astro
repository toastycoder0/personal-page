---
import Image from 'astro/components/Image.astro'

interface Props {
  description: string
  image: string
  name: string
}

const { description, image, name } = Astro.props
---

<header class='items-center flex flex-col gap-2 text-center'>
  <Image class='w-32 h-32 rounded-full' width={460} height={460} src={image} alt={name} />
  <h1 class='font-bold text-2xl'>{name}</h1>
  <p class='text-gray w-full font-medium max-w-[400px]'>
    {description}
  </p>
</header>
