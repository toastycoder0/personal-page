---
import Image from 'astro/components/Image.astro'
import { header } from '@/data.json'

const { name, profile, description } = header
---

<header class='items-center flex flex-col gap-2 text-center'>
  <Image class='w-32 h-32 rounded-full' width={460} height={460} src={profile} alt={name} />
  <h1 class='font-bold text-2xl'>{name}</h1>
  <p class='text-gray w-full max-w-[400px] text-justify'>
    {description}
  </p>
</header>
